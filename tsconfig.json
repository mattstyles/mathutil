{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true
  },
  "exclude": [
    "node_modules",
    "**/*/lib",
    "**/*/dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "examples/**",
    "vite.config.ts"
  ]
}
