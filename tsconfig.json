{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/*/lib", "**/*/dist", "**/*.spec.ts", "**/*.test.ts", "examples/**", "vite.config.ts"]
}
